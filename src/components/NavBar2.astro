---

<nav>
    <div class="navContainer">
        <span class="navLogo">
            Nivek
        </span>
        <ul class="menu" id="menu">
            <li>
                <a class="navLinks" href="#">Home</a>
            </li>
            <li>
                <a class="navLinks" href="#">Services</a>
            </li>
            <li>
                <a class="navLinks" href="#">About</a>
            </li>
        </ul>
        <div class="toggleBtn">
            <i>
                <svg id="open" width="40" height="40" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M3 19v-14a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z"></path>
                    <path d="M11 15h2"></path>
                    <path d="M9 12h6"></path>
                    <path d="M10 9h4"></path>
                 </svg>
            </i>
            <i>
                <svg id="close" width="40" height="40" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M4 6l16 0"></path>
                    <path d="M8 12l8 0"></path>
                    <path d="M6 18l12 0"></path>
                 </svg>
            </i>
        </div>
        <div class="navBtnContainer">
            <a class="navBtn" href="#">Contact</a>
        </div>
    </div>
</nav>

<style>
    .navContainer{
        height: 5rem;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 0.75rem;
        border-bottom: 0.125rem solid var(--hover-gradient);
        background-color: var(--primaryTwo);
    }
    .navLogo{
        font-size: 2.5rem;
    }
    .menu{
        position: fixed;
        z-index: 2;
        bottom: 5rem;
        right: 5rem;
        background-color: var(--primary-gradient);
        backdrop-filter: blur(0.25rem);
        display: flex;
        flex-direction: column;
        width: 15rem;
        height: 15rem;
        border-radius: 1rem;
        display:flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-end-end-radius: 0.125rem;
        transform: translate(100%, 100%), scale(0,0);
        
    }
    nav ul li {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .navLinks{
        font-size: 2rem;
        font-weight: 500;
        color: var(--hover);
        padding: 1rem 0;
        width: 100%;
        text-align: center;
    }
    #open {
        position: fixed;
        z-index: 2;
        transform: scale(1);
        bottom: 2.5rem;
        right: 2rem;
        background-color: var(--hover-gradient);
        backdrop-filter: blur(0.25rem);
        transition: transform 400ms;
    }
    #close{
        position: fixed;
        z-index: 2;
        transform: scale(0);
        bottom: 2.5rem;
        right: 2rem;
        background-color: var(--hover-gradient);
        backdrop-filter: blur(0.25rem);
        transition: transform 400ms;
    }
    .navBtn{
        padding: 0.5rem 1rem;
        background-color: var(--secundary);
        backdrop-filter: blur(0.25rem);
        border-radius: 2rem;
        border: 0.125rem solid var(--hover);
        color: var(--primaryTwo);
        font-weight: 500;
    }
</style>