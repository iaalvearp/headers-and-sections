<script>
  const nav = document.getElementById("nav");
  const navBg = document.getElementById("navBg");
  const menu = document.getElementById("menu");
  const openBtn = document.getElementById("open");
  const closeBtn = document.getElementById("close");

  openBtn.addEventListener("click", ()=>{
    nav.style.zIndex = "3";
    navBg.style.transform = "translateX(0)";
    menu.style.transform = "translateX(0)";
    closeBtn.style.transform = "scale(1)";
    openBtn.style.transform = "scale(0)";
  });
  closeBtn.addEventListener("click", ()=>{
    nav.style.zIndex = "2";
    navBg.style.transform = "translateX(100%)";
    menu.style.transform = "translateX(100%)";
    closeBtn.style.transform = "scale(0)";
    openBtn.style.transform = "scale(1)";
  });

</script>

<nav id="nav">
    <strong class="navLogo">Nivek</strong>
    <ul id="menu">
      <li>
        <span class="nav-linkBg"></span>
        <a href="#">Home</a>
      </li>
      <li>
        <span class="nav-linkBg"></span>
        <a href="#">Services</a>
      </li>
      <li>
        <span class="nav-linkBg"></span>
        <a href="#">About</a>
      </li>
      <li>
        <span class="nav-linkBg"></span>
        <a href="#">Contact</a>
      </li>
    </ul>
    <div class="toggleMenu">
      <i>
        <svg id="open" width="40" height="40" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M4 4h6v6h-6z"></path>
        <path d="M14 4h6v6h-6z"></path>
        <path d="M4 14h6v6h-6z"></path>
        <path d="M17 17m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
        </svg>
      </i>
      <i>
        <svg id="close" width="40" height="40" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M3 5a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-14z"></path>
          <path d="M9 9l6 6m0 -6l-6 6"></path>
       </svg>
      </i>
    </div>
    <span class="navBg" id="navBg"></span>
</nav>

<style>
  
  nav{
    width: 80%;
    height: 5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    z-index: 1;
  }
  
  .navLogo {
    font-size: 2rem;
    color: var(--hover);
  }
  
  ul {
    display: flex;
    height: 100%;
    align-items: center;
    transform: translateX(0%);
  }
  
  ul li {
    position: relative;
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    transform: translateX(0%);
  }
  
  ul li a {
    padding: 0.5rem 1rem;
    font-size: 1.25rem;
    z-index: 1;
    transition: color;
    transition-duration: 500ms;
    transform: translateX(0);
  }
  
  .nav-linkBg{
    height: 100%;
    width: 100%;
    background-color: var(--primary);
    position: absolute;
    z-index: 0;
    clip-path: polygon(0 0, 100% 0%, 100% 100%, 50% 80%, 0 100%);
    transform: translateY(-100%);
    transition: transform;
    transition-duration: 500ms;
  }
  
  li:hover .nav-linkBg {
    transform: translateY(0);
    
  }
  li:hover a {
    color: var(--secundary);
  }
  
  .toggleMenu, .navBg {
    display: none;
  }
  @media (max-width: 48rem) {
    nav{
    position: absolute;
    width: 100%;
    height: 100%;
    padding: 5% 10%;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    z-index: 2;
  }

  .navLogo{
    font-size: 2.5rem;
    z-index: 5;
  }

  nav ul {
    position: absolute;
    inset: 0;
    z-index: 5;
    height: 60%;
    width: 100%;
    display: flex;
    flex-direction: column;
    margin: auto 0;
    transform: translateX(100%);
    transition: transform 500ms;
  }

  nav ul li {
    width: 100%;
    text-align: center;
  }

  nav ul li a {
    display: block;
    font-size: 2rem;
    padding: 0.75rem 0;
    width: 100%;
    font-weight: 700;
  }

  .toggleMenu {
    display: block;
    position: relative;
    z-index: 5;
  }

  #close {
    transform: scale(0);
    transition: transform 500ms;
  }

  #open {
    transform: scale(1);
    transition: transform 500ms;
    position: absolute;
  }

  .nav-linkBg{
    display: none;
  }

  .navBg{
    display: block;
    position:absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background-color: var(--primary-gradient);
    backdrop-filter: blur(00.25rem);
    z-index: 4;
    transform: translateX(100%);
    transition: transform 500ms;
  }
}

</style>